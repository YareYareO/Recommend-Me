@page
@model RecMe.Areas.Identity.Pages.Account.Manage.UsersThingsListModel

@{
    ViewData["Title"] = "UsersThingsList";
    Layout = "~/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<h1>UsersThingsList</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Thing[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thing[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thing[0].UserId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Thing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                <a asp-page="./UsersThingEdit" asp-route-id="@item.Id">Edit</a>
                <a asp-page="./UsersThingDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
