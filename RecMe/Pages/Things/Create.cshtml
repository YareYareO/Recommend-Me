@page
@using Microsoft.AspNetCore.Html;
@model RecMe.Pages.Things.CreateModel

@section SearchHead{
    <link rel="stylesheet" href="~/css/SearchPartial/SearchContainerStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SearchPartial/SelectButtonStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SearchPartial/ToggleChildrenButtonStyle.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Thing</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Thing.Name" class="control-label"></label>
                <input asp-for="Thing.Name" class="form-control" />
                <span asp-validation-for="Thing.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thing.Description" class="control-label"></label>
                <input asp-for="Thing.Description" class="form-control" />
                <span asp-validation-for="Thing.Description" class="text-danger"></span>
            </div>
            
            <partial name="_ChoseTagCreate" model="Model.Tag" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function ToggleButtonVisibility(taggroupname) {
            $(taggroupname).toggle();
        }
    </script>
}
